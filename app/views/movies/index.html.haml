-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      -highligth_title = "hilite" if 'title' == params[:sort_by]
      %th{class: highligth_title}= link_to "Movie Title", movies_path(sort_by: :title), id: 'title_header'
      %th Rating
      -highligth_release = "hilite" if 'release_date' == params[:sort_by]
      %th{class: highligth_release}= link_to "Release Date", movies_path(sort_by: :release_date), id: 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
